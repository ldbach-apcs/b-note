<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alignmentMode="alignBounds"
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:paddingBottom="4dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:useDefaultMargins="true">

        <!-- Group of icons
        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_event_note_white_36dp"
            android:layout_column="0"
            android:layout_columnSpan="1"/>

        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_schedule_white_36dp"
            android:layout_column="0"
            android:layout_columnSpan="1"/>

        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_notifications_active_white_36dp"
            android:layout_column="0"
            android:layout_columnSpan="1"/>

        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_repeat_white_36dp"
            android:layout_column="0"
            android:layout_columnSpan="1"/>
            -->

        <!-- Group of descriptive text -->
        <TextView
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_row="0"
            android:paddingBottom="4dp"
            android:paddingEnd="16dp"
            android:paddingStart="8dp"
            android:text="@string/add_a_schedule"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_tv_date"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:paddingEnd="16dp"
            android:paddingStart="8dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dialog_tv_time"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:paddingEnd="16dp"
            android:paddingStart="8dp"
            android:textColor="#000000"
            android:textSize="17sp" />

        <!-- Group of spinner for notification -->
        <Spinner
            android:id="@+id/spinner_notification"
            android:layout_width="fill_parent"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:id="@+id/spinner_repeat"
            android:layout_width="fill_parent"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/btn_done_schedule"
            android:layout_gravity="bottom|end"
            android:backgroundTint="@color/button_background"
            android:text="@string/ok"
            android:textColor="@color/button_text" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>